  </scm>
	
	<!-- only from bom project -->
	<distributionManagement>
		<snapshotRepository>
			<id>maven-snapshot</id>
			<url>http://nexus/repository/maven-snapshot/</url>
		</snapshotRepository>
		<repository>
			<id>maven-release</id>
			<url>http://nexus/repository/maven-release/</url>
		</repository>
	</distributionManagement>
	<!-- //only from bom project -->
	
	<properties>
		<project.build.sourceEncoding>utf-8</project.build.sourceEncoding>
		<downloadSources>true</downloadSources>
		<downloadJavadocs>true</downloadJavadocs>
		<java.version>11</java.version>
		<io.springfox.version>2.10.5</io.springfox.version>
		<io.swagger.parser.v3.version>2.0.27</io.swagger.parser.v3.version>
