			</exclusions>
		</dependency>
		<!-- //spring-oauth2 -->
		
		
		<!-- json -->
		<dependency>
			<groupId>org.codehaus.jettison</groupId>
			<artifactId>jettison</artifactId>
			<version>1.2</version>
		</dependency>
		<!-- //json -->
		
		<!-- jdbc -->
		<!-- <dependency>
			<groupId>ojdbc</groupId>
			<artifactId>ojdbc</artifactId>
			<version>8</version>
		</dependency> -->
