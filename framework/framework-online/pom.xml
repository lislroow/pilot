<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>mgkim.bom</groupId>
    <artifactId>framework-bom</artifactId>
    <version>2</version><!-- -SNAPSHOT -->
  </parent>
  <groupId>mgkim.framework</groupId>
  <artifactId>framework-online</artifactId>
  <version>2.0</version><!-- -SNAPSHOT -->
  <packaging>jar</packaging>
  <name>${project.groupId}:${project.artifactId}</name>
  <url>https://github.com/lislroow/pilot.git</url>
  
  <repositories>
    <repository>
      <id>maven-group</id>
      <url>https://nexus/repository/maven-group-snapshot/</url>
    </repository>
  </repositories>
  
  <scm>
    <connection>scm:git:git@github.com:lislroow/pilot.git</connection>
    <tag>HEAD</tag>
  </scm>
  
  <properties>
    <!-- for release
    -->
    <framework-core.version>2.0</framework-core.version>
    <!-- for snapshot
    <framework-core.version>[,3.0)</framework-core.version>
    -->
  </properties>
  
  <dependencies>
    <!-- framework -->
    <dependency>
      <groupId>mgkim.framework</groupId>
      <artifactId>framework-core</artifactId>
      <version>${framework-core.version}</version>
    </dependency>
    <!-- //framework -->
  </dependencies>
  
  <build>
    <defaultGoal>install</defaultGoal>
    <directory>${basedir}/target</directory>
    <finalName>${project.artifactId}-${project.version}</finalName>
  </build>

</project>
